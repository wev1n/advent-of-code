{
  "compilerOptions": {
    "target": "ES2020", // The JavaScript version to target.
    "module": "CommonJS", // Module system for Node.js.
    "outDir": "./dist", // Output directory after compiling.
    "rootDir": "./src", // Root directory for your TypeScript files.
    "strict": true, // Enable strict type-checking.
    "esModuleInterop": true, // Allows compatibility with CommonJS and ES Modules.
    "skipLibCheck": true, // Skip type checks for library files.
    "noImplicitAny": false, // Allow implicit `any`
    "strictNullChecks": false, // Don't enforce strict null checking
    "types": ["node"] // Type declaration files to be included in compilation.
  },
  "include": ["src/**/*"] // Include all files in the 'src' directory.
}
